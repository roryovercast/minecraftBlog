<%= render 'welcome/nav' %>

<%- model_class = Post -%>
<br></br>


<table class="table table-hover">

	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:title) %></th>
			<th><%= model_class.human_attribute_name(:text) %></th>
			<th><%= 'Time Created' %></th>
			<th><%= 'Actions' %></th>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.text %></td>
				<td class="small_view"><%= post.created_at.strftime("%B %d, %Y at %H:%M") %></td>
				<td>
					<%= link_to 'Show', post, :class => 'btn btn-small' %>
					<%= link_to 'Edit', edit_post_path(post),
		   			  :class => 'btn btn-small btn-warning' %>
					<%= link_to 'Delete', post_path(post),
							:class => 'btn btn-small btn-danger',
							method: :delete, data: { confirm: 
										 'Are you sure?' } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'New Post', new_post_path,  :class => 'btn' %>
